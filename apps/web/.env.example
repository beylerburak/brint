# Environment Variables Example for Frontend (Next.js)
# Copy this file to .env.local and fill in your actual values

# Public API base URL used by the Next.js frontend
# This must point to the backend APP_URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# Public app URL (the URL of the Next.js app)
# Optional, can be useful for links, redirects, canonical URLs, etc.
NEXT_PUBLIC_APP_URL=http://localhost:3000

NEXT_PUBLIC_SENTRY_DSN_WEB=""  # Sentry DSN (opsiyonel, boşsa devre dışı)
SENTRY_ENVIRONMENT_WEB="local"  # Opsiyonel, default: NODE_ENV
SENTRY_TRACES_SAMPLE_RATE_WEB=0.1  # Opsiyonel, default: 0.1
SENTRY_ORG=""  # Opsiyonel, build için
SENTRY_PROJECT=""  # Opsiyonel, build için