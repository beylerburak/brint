# Environment Variables Example
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
API_LOG_LEVEL=info

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/brint_alt"

# JWT Configuration
ACCESS_TOKEN_SECRET="change-me-access-32chars-min"
REFRESH_TOKEN_SECRET="change-me-refresh-32chars-min"
ACCESS_TOKEN_EXPIRES_IN_MINUTES=15
REFRESH_TOKEN_EXPIRES_IN_DAYS=30
