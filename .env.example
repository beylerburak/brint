# Environment Variables Example for Backend API
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development

# API Configuration
API_PORT=3001
API_HOST=0.0.0.0
API_LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/brint_dev?schema=public

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
ACCESS_TOKEN_SECRET=change-me-access-32chars-minimum-length-required
REFRESH_TOKEN_SECRET=change-me-refresh-32chars-minimum-length-required
ACCESS_TOKEN_EXPIRES_IN_MINUTES=15
REFRESH_TOKEN_EXPIRES_IN_DAYS=30

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Application URLs (Backend API Configuration)
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
# Additional allowed origins for CORS (comma-separated, e.g. "https://admin.example.com,https://partner.example.com")
ADDITIONAL_ALLOWED_ORIGINS=

# AWS / S3 Media Configuration
AWS_REGION=us-east-1
S3_MEDIA_BUCKET=brint-media-dev
# Optional CDN base URL (e.g. https://cdn.example.com). Leave empty to use S3 URLs.
S3_PUBLIC_CDN_URL=

# Storage Configuration (optional, defaults will be used if not set)
STORAGE_UPLOAD_EXPIRE_SECONDS=60
STORAGE_DOWNLOAD_EXPIRE_SECONDS=120
STORAGE_AVATAR_MAX_MB=5
STORAGE_CONTENT_IMAGE_MAX_MB=50
STORAGE_CONTENT_VIDEO_MAX_MB=200

# SMTP Configuration (optional, email features disabled if not set)
SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

SENTRY_DSN_API=""  # Sentry DSN (opsiyonel, boşsa devre dışı)
SENTRY_ENVIRONMENT="local"  # Opsiyonel, default: NODE_ENV
SENTRY_TRACES_SAMPLE_RATE=0.1  # Opsiyonel, default: 0.1